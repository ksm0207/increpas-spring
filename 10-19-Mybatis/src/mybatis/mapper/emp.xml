<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="emp">
	

	<select id="search" parameterType="java.util.Map" resultType="mybatis.vo.EmpVO">
		
		SELECT *
		FROM employees
		
		<where>
			<if test="searchType != null and searchValue != null">
				<choose>
				
					<when test="searchType == 0">
						employee_id = #{searchValue}
					</when>
					
					<when test="searchType == 1">
						first_name LIKE '%' || #{searchValue} || '%'
					</when>
					
					<when test="searchType == 2">
						UPPER(last_name) LIKE '%' || UPPER(#{searchValue}) || '%'
					</when>
					
					<when test="searchType == 3">
						UPPER(job_id) LIKE '%' || UPPER(#{searchValue}) || '%'
					</when>
					
					<when test="searchType == 4">
						department_id = #{searchValue}
					</when>
				</choose>
			</if>
		</where>
		
	</select>
	
</mapper>





